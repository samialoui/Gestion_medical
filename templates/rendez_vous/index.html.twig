{% extends 'template.html.twig' %}

{% block title %}RendezVous index{% endblock %}

{% block body %}
    <h1>Liste des RendezVous</h1>
    <hr>
    <br>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Start</th>
                <th>End</th>
                <th>Description</th>
                <th>All_days</th>
                <th>BackroundColor</th>
                <th>BorderColor</th>
                <th>TextColor</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rendez_vou in rendez_vouses %}
            <tr>
                <td>{{ rendez_vou.id }}</td>
                <td>{{ rendez_vou.titre }}</td>
                <td>{{ rendez_vou.start ? rendez_vou.start|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ rendez_vou.end ? rendez_vou.end|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ rendez_vou.description }}</td>
                <td>{{ rendez_vou.allDays ? 'Yes' : 'No' }}</td>
                <td>{{ rendez_vou.backroundColor }}</td>
                <td>{{ rendez_vou.borderColor }}</td>
                <td>{{ rendez_vou.textColor }}</td>
                <td>
                    <a href="{{ path('rendez_vous_edit', {'id': rendez_vou.id}) }}"><svg xmlns="http://www.w3.org/2000/svg" style="color: orange" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                        </svg></a>
                    <a href="{{ path('rendez_vous_show', {'id': rendez_vou.id}) }}"><svg xmlns="http://www.w3.org/2000/svg" style="color: dodgerblue" width="16" height="16" fill="currentColor" class="bi bi-exclamation-circle-fill" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                        </svg></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button class="btn btn-success"><a href="{{ path('rendez_vous_new') }}" style="color: white">Create new</a></button>
{% endblock %}
