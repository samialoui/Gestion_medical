{% extends 'template.html.twig' %}

{% block title %}Traitements index{% endblock %}

{% block body %}
    <h1>Traitements index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for traitement in traitements %}
            <tr>
                <td>{{ traitement.id }}</td>
                <td>{{ traitement.date ? traitement.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ traitement.description }}</td>
                <td>
                    <a href="{{ path('traitements_show', {'id': traitement.id}) }}">show</a>
                    <a href="{{ path('traitements_edit', {'id': traitement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('traitements_new') }}">Create new</a>
{% endblock %}
